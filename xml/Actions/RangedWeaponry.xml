<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type = "text/xsl" href = "../Converter.xsl"?> 
<actions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xml.xsd">
    <action upgrade="$l$" difficulty="Weapon">
        <name>Shoot Ranged Weapon</name>
        <type>Shoot</type>
        <type>Ranged</type>
        <using>
            <type>Shoot</type>
            <type>Weapon</type>
        </using>
        <costs><ammo>1</ammo></costs>
        <effect>
            <target><thing>Character</thing></target>
            <range>Weapon</range>
            <aoe><Weapon/></aoe>
            <save>Physical</save>
            
            <damage>Weapon</damage>
            <!--Target Character at Weapon Range and all other Characters within area of effect must make a Physical Save or take Weapon Damage.-->
        </effect>
        <upeffect>The Difficulty Count is at -1 per level.</upeffect>
    </action>
    <action upgrade="$l^2$">
        <name>Shoot Two Ranged Weapons</name>
        <type>Shoot</type>
        <type>Ranged</type>
        <using>
            <type>Shoot</type>
            <type>Weapon</type>
        </using>
        <number>2</number>
        <effect>
            <takeAction>Shoot Ranged Weapon</takeAction>
            <using>Weapon1</using>
            <takeAction>Shoot Ranged Weapon</takeAction>
            <using>Weapon2</using>
            <!--Make a Shoot Ranged Weapon Action for two differenent equiped Ranged Weapons immediatly.-->
        </effect>
        <upeffect>The Action Time reduces by 1 each level to a minimum of the longest of the two Weapon's Time.</upeffect>
    </action>
    <action upgrade="$l$">
        <name>Throw Weapon</name>
        <type>Throw</type>
        <type>Ranged</type>
        <using>
            <type>Throw</type>
            <type>Weapon</type>
        </using>
        <costs><ammo>1</ammo></costs>
        <effect>
            <target><thing>Character</thing></target>
            <range>Weapon</range>
            <aoe><Weapon/></aoe>
            <save>Physical</save>
            
            <damage>Weapon</damage>
            <!--Target Character at Weapon Range and all other Characters within area of effect must make a Physical Save or take Weapon Damage.-->
        </effect>
        <upeffect>The Difficulty Count is at -1 per level.</upeffect>
    </action>
    <action upgrade="$l!$">
        <name>Aim</name>
        <type>Shoot</type>
        <type>Ranged</type>
        <time>+5</time>
        <effect>
            <target>
                <type>Shoot</type>
                <thing>Action</thing>
            </target>
            <addActionAttribute>
                <difficulty>-3</difficulty>
            </addActionAttribute>
            <!--Modifies Shoot Ranged Weapon Action Difficulty by -3.-->
        </effect>
        <upeffect>-1 per level to the Time Modifier up to five levels.</upeffect>
    </action>
    <action upgrade="$l$">
        <name>Double Shot</name>
        <type>Shoot</type>
        <type>Ranged</type>
        <type>Physical</type>
        <using>
            <type>Rapid Fire</type>
            <type>Shoot</type>
            <type>Weapon</type>
        </using>
        <costs><Physical>1</Physical></costs>
        <effect>
            <takeAction>Shoot Ranged Weapon</takeAction>
            <alterAttribute><difficulty>+5</difficulty></alterAttribute>
            <using>Weapon</using>
            <takeAction>Shoot Ranged Weapon</takeAction>
            <alterAttribute><difficulty>+5</difficulty></alterAttribute>
            <using>Weapon</using>
            <!--Make two Shoot Ranged Weapon Actions with a Rapid Fire Ranged Weapon at +5 Difficulty-->
        </effect>
        <upeffect>Extra difficulty is decreased by 1 each level to a minimum of 0 and every 5 levels the number of Shoot Ranged Weapon Actions made increases by 1.</upeffect>
    </action>
</actions>