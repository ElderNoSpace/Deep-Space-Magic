<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type = "text/xsl" href = "../Converter.xsl"?>
<weapons xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xml.xsd">
    <weapon>
        <name>Frag Grenade</name>
        <type>Grenade</type>
        <type>Throw</type>
        <type>Ballistic</type>
        <type>Ranged</type>
        <cost>5</cost>
        <passiveEffect><ignoresCover/></passiveEffect>
        <difficulty>15</difficulty>
        <time>15</time>
        <range>50</range>
        <damage>1</damage>
    </weapon>
    <weapon>
        <name>Plasma Grenade</name>
        <type>Grenade</type>
        <type>Throw</type>
        <type>Plasma</type>
        <type>Ranged</type>
        <cost>10</cost>
        <passiveEffect><ignoresCover/></passiveEffect>
        <difficulty>15</difficulty>
        <time>15</time>
        <range>50</range>
        <aoe><circle>10</circle></aoe>
        <damage>1</damage>
    </weapon>
    <weapon>
        <name>Force Grenade</name>
        <type>Force</type>
        <type>Grenade</type>
        <type>Throw</type>
        <type>Ranged</type>
        <cost>5</cost>
        <passiveEffect>
            <ignoresCover/>
            <push>5</push>
            <!--Ignores Cover, pushes target on hit 5m in any direction-->
        </passiveEffect>
        <difficulty>15</difficulty>
        <time>15</time>
        <range>50</range>
        <damage>1</damage>
    </weapon>
    <weapon>
        <name>Laser Grenade</name>
        <type>Grenade</type>
        <type>Throw</type>
        <type>Laser</type>
        <type>Ranged</type>
        <cost>15</cost>
        <passiveEffect>
            <ignoresCover/>
            <wait>25</wait>
            <!--Ignores Cover, target must wait 25 time units on a failed Physical save.-->
        </passiveEffect>
        <difficulty>20</difficulty>
        <time>10</time>
        <range>100</range>
        <damage>0</damage>
    </weapon>
</weapons>